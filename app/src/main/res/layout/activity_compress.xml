<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".compress.CompressActivity">

    <Button
        android:id="@+id/quality_compress_jpg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="jpg质量压缩"/>

    <Button
        android:id="@+id/quality_compress_png"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="png质量压缩"/>

    <Button
        android:id="@+id/quality_compress_webp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="webp质量压缩"/>

    <Button
        android:id="@+id/size_compress1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="通过API尺寸压缩"/>

    <Button
        android:id="@+id/size_compress2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="通过绘制尺寸压缩"/>

</LinearLayout>